@using RunGroops.ViewModels;
@model DashboardViewModel

<div class="container pt-4">

	<div class="row pt-2">

		<div class="col-md-6">
			<h4>Your Races (@Model.Races.Count())</h4>
			<a class="btn btn-outline-success" asp-controller="Race" asp-action="Create">Create Race</a>
			<div class="panel panel-primary pt-4">
				<div class="panel-body">
					<ul class="list-group">
						@foreach (var race in Model.Races)
						{
							<li class="card-footer card-footer-borderless p4 d-flex justify-content-between">
								<a asp-controller="Race" asp-action="Details" asp-route-id="@race.Id" class="btn btn-sm fw-bold">@race.Title</a>

								<a asp-controller="Race" asp-action="Edit" asp-route-id="@race.Id" type="button" class="btn btn-sm btn-outline-success">Edit</a>
								<a asp-controller="Race" asp-action="Delete" asp-route-id="@race.Id" type="button" class="btn btn-sm btn-outline-danger">Delete</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</div>


		<div class="col-md-6">
			<h4>Your Clubs (@Model.Clubs.Count())</h4>
			<a class="btn btn-outline-success" asp-controller="Club" asp-action="Create">Create Club</a>
			<div class="panel panel-primary pt-4">
				<div class="panel-body">
					<ul class="list-group">
						@foreach (var club in Model.Clubs)
						{
							<li class="card-footer card-footer-borderless p4 d-flex justify-content-between">
								<a asp-controller="Club" asp-action="Details" asp-route-id="@club.Id" class="btn btn-sm fw-bold">@club.Title</a>

								<a asp-controller="Club" asp-action="Edit" asp-route-id="@club.Id" type="button" class="btn btn-sm btn-outline-success">Edit</a>
								<a asp-controller="Club" asp-action="Delete" asp-route-id="@club.Id" type="button" class="btn btn-sm btn-outline-danger">Delete</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>


